<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.feggetsberger16.feggetsberger16woche22.MainActivity">

    <TextView
        android:id="@+id/textViewCash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="140dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="28dp"
        android:layout_weight="1"
        android:text="CA$H 0,00€"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner2"
        tools:textSize="20sp" />
        tools:layout_editor_absoluteX="226dp"
        tools:layout_editor_absoluteY="371dp" />

    <TextView
        android:id="@+id/textViewEuroFor"
        android:layout_width="155dp"
        android:layout_height="23dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="40dp"
        android:text="Euro für"
        app:layout_constraintStart_toEndOf="@+id/textViewVon"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:textSize="20sp" />
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="144dp" />

    <TextView
        android:id="@+id/textViewVon"
        android:layout_width="45dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="Von"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAm"
        tools:textSize="20sp" />

    <TextView
        android:id="@+id/textViewAm"
        android:layout_width="42dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="Am"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="155dp"
        android:layout_height="22dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toEndOf="@+id/textViewAm"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="170dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVon" />

    <Button
        android:id="@+id/button"
        android:layout_width="56dp"
        android:layout_height="36dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="32dp"
        android:onClick="onClickButton"
        android:text="OK"
        app:layout_constraintStart_toEndOf="@+id/spinner2"
        app:layout_constraintTop_toBottomOf="@+id/textViewEuroFor" />

    <NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="123dp"
        android:layout_height="23dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/textViewVon"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <EditText
        android:id="@+id/date"
        android:layout_width="123dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Datum..."
        android:inputType="date"
        app:layout_constraintStart_toEndOf="@+id/textViewAm"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
